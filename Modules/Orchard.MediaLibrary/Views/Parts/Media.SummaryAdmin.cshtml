@using Orchard.MediaLibrary.Models
@{
    MediaPart mediaPart = Model.ContentPart;
}           

<div class="title">
    <em>@T("Title:")</em>
    <span>@mediaPart.Title</span>
</div>
<div class="file-name">
    <em>@T("Filename:")</em>
    <span>@Path.GetFileName(mediaPart.MediaUrl)</span>
</div>
<div class="mime-type">
    <em>@T("Mime Type:")</em>
    <span>@mediaPart.MimeType</span>
</div>
@if (HasText(mediaPart.Caption)) {
    <div class="caption">
        <em>@T("Caption:")</em>
        <span>@mediaPart.Caption</span>
    </div>
}

@if (HasText(mediaPart.AlternateText)) {
    <div class="alternate-text">
        <em>@T("Alternate Text:")</em>
        <span>@mediaPart.AlternateText</span>
    </div>
}

